<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" >

        <RelativeLayout
            android:id="@+id/pseudo_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/pseudo"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAllCaps="true"
                android:text="Pseudo"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/classement"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="textEnd"
                android:text="Classement"
                android:layout_alignParentRight="true"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ratio_group"
            android:layout_below="@+id/pseudo_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratio"
                android:id="@+id/ratio_text"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="@color/md_theme_onBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratio"
                android:id="@+id/ratio"
                android:layout_toRightOf="@id/ratio_text"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_onPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pourcentage"
                android:id="@+id/ratio_pourcentage"
                android:layout_toRightOf="@id/ratio"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_onPrimary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/details_group"
            android:layout_below="@+id/ratio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" >

            <RelativeLayout
                android:id="@+id/gagne_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gagne"
                    android:id="@+id/gagne_text"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GagnÃ©"
                    android:id="@+id/gagne"
                    android:layout_toRightOf="@id/gagne_text"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onBackground" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gagne_group"
                android:text="@string/trait"
                android:id="@+id/trait"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_onBackground" />

            <RelativeLayout
                android:id="@+id/perdu_group"
                android:layout_toRightOf="@id/trait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perdu"
                    android:id="@+id/perdu_text"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onBackground" />

                <TextView
                    android:id="@+id/perdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/perdu_text"
                    android:text="Perdu"
                    android:textAllCaps="true"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onBackground"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>